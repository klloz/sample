{{ form_start(form) }}

{{ form_row(form.registeredSince) }}
{{ form_row(form.submit) }}
{{ form_end(form) }}
<div>
    {{ results.totalCount }}
</div>
<div>
    <table>
        <thead>
        <tr>
            <th>Uuid</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Email</th>
            <th>Age</th>
            <th>Languages</th>
            <th>Registration Date</th>
        </tr>
        </thead>
        <tbody>
        {% for user in results.data %}
            <tr>
                <td>{{ user.uuid }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.surname }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.age }}
                    {% if user.age < 18 %}
                        ({{ user.timeToFullAge }})
                    {% endif %}
                </td>
                <td>{{ user.langs }}</td>
                <td>{{ user.registrationDate|date('Y-m-d H:i:s') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No users found.</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
</div>
